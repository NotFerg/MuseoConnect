<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>MuseoConnect - Admin - User List</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="assets/vendor/animate.css/animate.min.css" rel="stylesheet">
    <link href="assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link href="images/MuseoDeLaSalle.png" type="image/jpeg" rel="icon">

    <!-- Template Main CSS File -->
    <link href="assets/css/style.css" rel="stylesheet">

    <style>
        .question-table {
            background-color: #f8f9fa;
            border-radius: 15px;
            box-shadow: 10px 10px 10px rgba(45, 192, 16, 0.13);
            padding: 30px;
            border: 2px solid #28a745;
            margin-top: 30px;
        }

        .table-title {
            font-size: 40px;
            font-weight: bold;
            color: #000000;
            text-align: center;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th,
        td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #d3d3d3;
        }

        th {
            background-color: #28a745;
            color: #fff;
        }

        td {
            background-color: #fff;
        }

        td button {
            background-color: #28a745;
            color: #fff;
            border: none;
            padding: 10px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        td button:hover {
            background-color: #218838;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-default navbar-trans navbar-expand-lg fixed-top">
        <div class="container">
            <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarDefault" aria-controls="navbarDefault" aria-expanded="false"
                aria-label="Toggle navigation">
                <span></span>
                <span></span>
                <span></span>
            </button>
            <a class="navbar-brand text-brand" href="/loggedInindex">Museo<span class="color-b">Connect </span>ADMIN</a>

            <div class="navbar-collapse collapse justify-content-center" id="navbarDefault">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/loggedInadmin">Users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="/loggedInadminreservation">Reservations</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="/loggedInadminblocked">Blocked</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="/loggedInadminartifacts">Artifacts</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/loggedInadminreports">Reports</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/loggedInadminquestions">Games</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="/logout">Log Out</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav><!-- End Header/Navbar -->

    <main id="main">
        <section class="intro-single" id="card-section">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-lg-8">
                        <div class="title-single-box d-flex align-items-center">
                            <img src="/images/managequestions.png" alt="Image" class="img-fluid"
                                style="max-width: 100px; max-height: 100px;">
                            <h1 class="title-single">Manage Questions</h1>
                        </div>
                    </div>
                    <br><br><br><br><br><br><br><br>

                    <!-- Form for Adding a New Question -->
                    <h1>Add New Question</h1>
                    <form action="/admin/questions/add" method="post">
                        <label for="type" class="form-label">Question Type:</label>
                        <select name="type" id="type" class="form-control">
                            <option value="multiple-choice">Multiple Choice</option>
                            <option value="fill-in-the-blank">Fill in the Blank</option>
                        </select>
                        <br>

                        <label for="question" class="form-label">Question:</label>
                        <input type="text" class="form-control" id="question" name="question" required
                            autocomplete="off">
                        <br>

                        <label for="options" class="form-label">Options (for multiple-choice, comma-separated):</label>
                        <input type="text" class="form-control" id="options" name="options" autocomplete="off">
                        <br>

                        <label for="correctAnswer" class="form-label">Correct Answer:</label>
                        <input type="text" class="form-control" id="correctAnswer" name="correctAnswer" required
                            autocomplete="off">

                        <br>

                        <button type="submit" class="btn btn-primary">Add Question</button>
                        <br><br><br><br>
                    </form>


                    <!-- Table to Display Questions -->
                    <h1>Existing Questions</h1>
                    <table class="table question-table">
                        <thead>
                            <tr>
                                <th scope="col" class="col-3">Question</th>
                                <th scope="col" class="col-2">Type</th>
                                <th scope="col" class="col-3">Correct Answer</th>
                                <th scope="col" class="col-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% questions.forEach(question=> { %>
                                <tr>
                                    <td class="col-12 col-lg-2">
                                        <%= question.question %>
                                    </td>
                                    <td class="col-12 col-lg-2">
                                        <%= question.type %>
                                    </td>
                                    <td class="col-12 col-lg-2">
                                        <%= question.correctAnswer %>
                                    </td>
                                    <td class="col-12 col-lg-6">
                                        <!-- Update Form -->
                                        <form action="/admin/questions/<%= question._id %>?_method=PUT" method="post"
                                            class="d-grid ">
                                            <p class="my-1"><b>Question Type</b></p>
                                            <select name="type" id="type" class="form-control ">
                                                <option value="multiple-choice">Multiple Choice</option>
                                                <option value="fill-in-the-blank">Fill in the Blank</option>
                                            </select>

                                            <p class="my-1"><b>Question:</b></p>
                                            <input type="text" name="question" value="<%= question.question %>"
                                                placeholder="Question:" class="form-control ">

                                            <p class="my-1"><b>Options (for multiple-choice, comma-separated):</b></p>
                                            <input type="text" name="options" value="<%= question.options.join(', ') %>"
                                                placeholder="Options (for multiple-choice, comma-separated):"
                                                class="form-control ">

                                            <p class="my-1"><b>Correct Answer:</b></p>    
                                            <input type="text" name="correctAnswer"
                                                value="<%= question.correctAnswer %>" placeholder="Correct Answer:"
                                                class="form-control ">
                                            <button type="submit" class="btn btn-success btn-block mt-2">Update</button>
                                        </form>

                                        <!-- Delete Form -->
                                        <form action="/admin/questions/<%= question._id %>?_method=DELETE" method="post"
                                            class="d-grid mt-2">
                                            <button type="submit" class="btn btn-danger btn-block">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>

                </div>
            </div>
        </section>
    </main>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        let inactivityTimeout;
        // Function to reset the inactivity timer
        function resetInactivityTimeout() {
            clearTimeout(inactivityTimeout);
            inactivityTimeout = setTimeout(() => {
                // Send a request to the server to reset the session timeout
                fetch("/reset-inactivity").then((response) => {
                    if (response.ok) {
                        console.log("Inactivity timer reset.");
                        // Redirect to the logout route after 1 minute of inactivity
                        window.location.href = "/logout";
                    }
                });
            }, 300000); // 300,000 milliseconds = 5 minutes
        }
        // Listen for user interactions
        window.addEventListener("mousemove", resetInactivityTimeout);
        window.addEventListener("keydown", resetInactivityTimeout);
        // Initial reset
        resetInactivityTimeout();
    </script>

</body>

</html>