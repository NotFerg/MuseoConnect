<!DOCTYPE html>
<html>
<head>
    <title>Admin - Manage Questions</title>
    <!-- Add any additional CSS or JS you need here -->
</head>
<body>
    <h1>Manage Questions</h1>

    <!-- Form for Adding a New Question -->
    <h2>Add New Question</h2>
    <form action="/admin/questions/add" method="post">
        <label for="type">Question Type:</label>
        <select name="type" id="type">
            <option value="multiple-choice">Multiple Choice</option>
            <option value="fill-in-the-blank">Fill in the Blank</option>
        </select>
        <br>
        <label for="question">Question:</label>
        <input type="text" id="question" name="question" required>
        <br>
        <label for="options">Options (for multiple-choice, comma-separated):</label>
        <input type="text" id="options" name="options">
        <br>
        <label for="correctAnswer">Correct Answer:</label>
        <input type="text" id="correctAnswer" name="correctAnswer" required>
        <br>
        <button type="submit">Add Question</button>
    </form>

    <!-- Table to Display Questions -->
    <h2>Existing Questions</h2>
    <table>
        <thead>
            <tr>
                <th>Question</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% questions.forEach(question => { %>
                <tr>
                    <td><%= question.question %></td>
                    <td><%= question.type %></td>
                    <td>
                        <!-- Update Form -->
                        <form action="/admin/questions/<%= question._id %>?_method=PUT" method="post">
                            <input type="hidden" name="type" value="<%= question.type %>">
                            <input type="hidden" name="question" value="<%= question.question %>">
                            <input type="hidden" name="options" value="<%= question.options.join(', ') %>">
                            <input type="hidden" name="correctAnswer" value="<%= question.correctAnswer %>">
                            <button type="submit">Update</button>
                        </form>

                        <!-- Delete Form -->
                        <form action="/admin/questions/<%= question._id %>?_method=DELETE" method="post">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <!-- Add any additional scripts here -->

</body>
</html>
