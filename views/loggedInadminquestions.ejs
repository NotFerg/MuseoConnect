<!DOCTYPE html>
<html>
<head>
    <title>Admin - Manage Questions</title>
    <!-- Add any additional CSS or JS you need here -->
</head>
<body>
    <h1>Manage Questions</h1>

    <!-- Form for Adding a New Question -->
    <h2>Add New Question</h2>
    <form action="/admin/questions/add" method="post">
        <label for="type">Question Type:</label>
        <select name="type" id="type">
            <option value="multiple-choice">Multiple Choice</option>
            <option value="fill-in-the-blank">Fill in the Blank</option>
        </select>
        <br>
        <label for="question">Question:</label>
        <input type="text" id="question" name="question" required>
        <br>
        <label for="options">Options (for multiple-choice, comma-separated):</label>
        <input type="text" id="options" name="options">
        <br>
        <label for="correctAnswer">Correct Answer:</label>
        <input type="text" id="correctAnswer" name="correctAnswer" required>
        <br>
        <button type="submit">Add Question</button>
    </form>

    <!-- Form for Updating an Existing Question -->
    <h2>Update Question</h2>
    <form action="/admin/questions/update" method="post">
        <label for="id">Question ID:</label>
        <input type="text" id="id" name="id" required>
        <br>
        <!-- The rest of the inputs would be similar to the 'Add New Question' form -->
        <button type="submit">Update Question</button>
    </form>

    <!-- Form for Deleting a Question -->
    <h2>Delete Question</h2>
    <form action="/admin/questions/delete" method="post">
        <label for="deleteId">Question ID:</label>
        <input type="text" id="deleteId" name="id" required>
        <br>
        <button type="submit">Delete Question</button>
    </form>

    <!-- Add any additional scripts here -->

</body>
</html>
