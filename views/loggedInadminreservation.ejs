    <script>
        document.addEventListener("DOMContentLoaded", function () {
            function filterTable() {
                const searchInputTable = document.getElementById('reservation-table-search-input');
                const searchValue = searchInputTable.value.toLowerCase();

                const reservationsData = '<%- JSON.stringify(reservations) %>';
                let reservationsArray = [];

                if (reservationsData) {
                    reservationsArray = JSON.parse(reservationsData);
                }

                const filteredReservations = reservationsArray.filter(reservation => {
                    const fullName = reservation.fullName.toLowerCase();
                    const emailAddress = reservation.emailAddress.toLowerCase();
                    const visitDate = reservation.visitDate ? new Date(reservation.visitDate).toISOString().split('T')[0] : '';

                    return fullName.includes(searchValue) || emailAddress.includes(searchValue) || visitDate.includes(searchValue);
                });

                updateTable(filteredReservations);
            }

            // Form submit event
            document.getElementById('reservation-search-form').addEventListener('submit', function (event) {
                // Prevent the default form submission behavior
                event.preventDefault();
                // Trigger the search function
                filterTable();
            });

            // Search button click event (optional, as it's covered by the submit event)
            document.getElementById('reservation-table-search-button').addEventListener('click', function () {
                filterTable();
            });

            // Reset button click event
            document.getElementById('reservation-table-reset-button').addEventListener('click', function () {
                resetTable();
            });

            document.getElementById('reservation-table-search-input').addEventListener('keydown', function (event) {
                if (event.key === 'Enter') {
                    event.preventDefault();
                    filterTable();
                }
            });

            // Original sorting function
            function compareDates(a, b, sortOrder) {
                const dateA = new Date(a.visitDate).getTime();
                const dateB = new Date(b.visitDate).getTime();
                return sortOrder === 'asc' ? dateA - dateB : dateB - dateA;
            }

            function compareTimes(a, b, sortOrder) {
                const timeA = a.visitTime;
                const timeB = b.visitTime;
                return sortOrder === 'asc' ? timeA.localeCompare(timeB) : timeB.localeCompare(timeA);
            }

            function compareVisitors(a, b, sortOrder) {
                return sortOrder === 'asc' ? a.numberOfVisitors - b.numberOfVisitors : b.numberOfVisitors - a.numberOfVisitors;
            }

            // Function to update the table with sorted data
            function updateTable(reservations) {
                const tbody = document.querySelector('tbody');
                tbody.innerHTML = '';

                reservations.forEach(reservation => {
                    // Create table row and append it to the tbody
                    const tr = document.createElement('tr');
                    tr.innerHTML = `
            <td>${reservation.fullName}</td>
            <td>${reservation.emailAddress}</td>
            <td>
                <form action="/loggedIn/admin/reservations/${reservation._id}/visitDate?_method=PUT" method="post">
                    <input type="text" name="visitDate" class="visitDate form-control" value="${reservation.visitDate ? new Date(reservation.visitDate).toISOString().split('T')[0] : ''}"
                    required autocomplete="off">
                    <button type="submit" class="btn btn-success mt-2">Update Visit Date</button>
                </form>
            </td>
            <td>
                <form action="/loggedIn/admin/reservations/${reservation._id}/visitTime?_method=PUT" method="post" class="update-visit-time-form">
                    <input type="hidden" name="visitTime" value="${reservation.visitTime}">
                    <p>Current Reservation Time: ${reservation.visitTime}</p>
                    <button type="button" class="btn btn-success mt-2 update-visit-time" data-new-time="${reservation.visitTime === '10:30' ? '13:30' : '10:30'}">
                        Update Visit Time to ${reservation.visitTime === '10:30' ? '13:30' : '10:30'}
                    </button>
                </form>
            </td>
            <td>
                <form action="/loggedIn/admin/reservations/${reservation._id}/contactNumber?_method=PUT" method="post">
                    <input type="number" name="contactNumber" value="${reservation.contactNumber}" required class="form-control" autocomplete="off">
                    <button type="submit" class="btn btn-success mt-2">Update Contact Number</button>
                </form>
            </td>
            <td>
                <form action="/loggedIn/admin/reservations/${reservation._id}/numberOfVisitors?_method=PUT" method="post">
                    <input type="number" name="numberOfVisitors" value="${reservation.numberOfVisitors}" required class="form-control" autocomplete="off" min="1">
                    <button type="submit" class="btn btn-success mt-2">Update Number of Visitors</button>
                </form>
            </td>
            <td>
                <form action="/loggedIn/admin/remove-reservation/${reservation._id}" method="post">
                    <button type="submit" class="btn btn-danger btn-sm mt-2">Remove Reservation</button>
                </form>
            </td>
        `;

                    tbody.appendChild(tr);
                });
            }

            // Function to reset the table to the default state
            function resetTable() {
                const reservationJSON = '<%- JSON.stringify(reservations) %>';
                let reservationsData = [];

                if (reservationJSON) {
                    reservationsData = JSON.parse(reservationJSON);
                }
                updateTable(reservationsData); // Update the table with default data
            }

            // Sort button click event
            document.getElementById('sort-date-button').addEventListener('click', function () {
                const sortOrderSelect = document.getElementById('sort-order-select');
                const sortOrder = sortOrderSelect.options[sortOrderSelect.selectedIndex].value;

                const reservationJSON = '<%- JSON.stringify(reservations) %>';
                let reservationsData = [];

                if (reservationJSON) {
                    reservationsData = JSON.parse(reservationJSON);
                }

                reservationsData.sort((a, b) => compareDates(a, b, sortOrder)); // Sort reservations by date
                updateTable(reservationsData); // Update the table with sorted data
            });

            // Button click event for sorting by time
            document.getElementById('sort-time-button').addEventListener('click', function () {
                const sortOrderSelect = document.getElementById('sort-order-select');
                const sortOrder = sortOrderSelect.options[sortOrderSelect.selectedIndex].value;

                const reservationJSON = '<%- JSON.stringify(reservations) %>';
                let reservationsData = [];

                if (reservationJSON) {
                    reservationsData = JSON.parse(reservationJSON);
                }

                reservationsData.sort((a, b) => compareTimes(a, b, sortOrder));
                updateTable(reservationsData);
            });

            // Sort button click event for number of visitors
            document.getElementById('sort-visitors-button').addEventListener('click', function () {
                const sortOrderSelect = document.getElementById('sort-order-select');
                const sortOrder = sortOrderSelect.options[sortOrderSelect.selectedIndex].value;

                const reservationJSON = '<%- JSON.stringify(reservations) %>';
                let reservationsData = [];

                if (reservationJSON) {
                    reservationsData = JSON.parse(reservationJSON);
                }

                reservationsData.sort((a, b) => compareVisitors(a, b, sortOrder));
                updateTable(reservationsData);
            });

            // Reset button click event
            document.getElementById('reservation-reset-sort-button').addEventListener('click', function () {
                resetTable();
            });

            //Initialize the table on page load
            resetTable();
        });
        
        // Move the toggle functionality outside the DOMContentLoaded event
        const toggleViewButtonCard = document.getElementById("toggleViewButtonCard");
        const toggleViewButtonTable = document.getElementById("toggleViewButtonTable");
        const cardSection = document.getElementById("reservation-section");
        const tableSection = document.getElementById("reservation-table-section");

        // Initial view (card view)
        cardSection.style.display = "block";
        tableSection.style.display = "none";

        toggleViewButtonCard.addEventListener("click", function () {
            // Toggle the display property of card and table sections
            cardSection.style.display = "none";
            tableSection.style.display = "block";
        });

        toggleViewButtonTable.addEventListener("click", function () {
            // Toggle the display property of card and table sections
            cardSection.style.display = "block";
            tableSection.style.display = "none";
        });

    </script>
</body>

