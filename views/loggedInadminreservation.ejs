    <main id="main">
        <!-- Reservation List -->
        <section class="intro-single">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-lg-8">
                        <div class="title-single-box d-flex align-items-center">
                            <img src="images/reserved.png" alt="Image" class="img-fluid"
                                style="max-width: 100px; max-height: 100px;">
                            <h1 class="title-single">Reservation List</h1>
                        </div>
                    </div>
                    <br><br><br><br><br><br><br><br>
                    <form id="reservation-search-form" class="mb-3">
                        <div class="input-group">
                            <input type="text" id="reservation-search-input" class="form-control"
                                placeholder="Search by name or email" autocomplete="off">
                            <button type="button" id="reservation-search-button" class="btn btn-primary">Search</button>
                            <button type="button" id="reservation-reset-button" class="btn btn-secondary">Reset</button>
                        </div>
                    </form>


                    <div class="row">
                        <% reservations.forEach(reservation=> { %>
                            <div class="col-12 col-md-6 col-lg-4 reservation-card">
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%= reservation.fullName %>
                                        </h5>
                                        <p class="card-text"><strong>Email:</strong>
                                            <%= reservation.emailAddress %>
                                        </p>
                                        <!-- Display reservations for the user -->
                                        <h6>Reservations:</h6>

                                        <!-- Update Visit Date -->
                                        <form
                                            action="/loggedIn/admin/reservations/<%= reservation._id %>/visitDate?_method=PUT"
                                            method="post" class="mt-2">
                                            <div class="input-group">
                                                <input type="text" name="visitDate" class="visitDate form-control"
                                                    value="<%= reservation.visitDate.toISOString().split('T')[0] %>"
                                                    required autocomplete="off">
                                                <button type="submit" class="btn btn-success">Update Visit Date</button>
                                            </div>
                                        </form>

                                        <!-- Update Visit Time -->
                                        <form
                                            action="/loggedIn/admin/reservations/<%= reservation._id %>/visitTime?_method=PUT"
                                            method="post" class="mt-2 update-visit-time-form">
                                            <input type="hidden" name="visitTime" value="<%= reservation.visitTime %>">
                                            <p>Current Reservation Time: <%= reservation.visitTime %>
                                            </p>
                                            <button type="button" class="btn btn-success update-visit-time"
                                                data-new-time="<%= reservation.visitTime === '10:30' ? '13:30' : '10:30' %>">
                                                Update Visit Time to <%= reservation.visitTime==='10:30' ? '13:30'
                                                    : '10:30' %>
                                            </button>
                                        </form>

                                        <!-- Update Contact Number -->
                                        <form
                                            action="/loggedIn/admin/reservations/<%= reservation._id %>/contactNumber?_method=PUT"
                                            method="post" class="mt-2">
                                            <div class="input-group">
                                                <input type="number" name="contactNumber"
                                                    value="<%= reservation.contactNumber %>" required
                                                    class="form-control" autocomplete="off">
                                                <button type="submit" class="btn btn-success">Update Contact
                                                    Number</button>
                                            </div>
                                        </form>

                                        <!-- Update Number of Visitors -->
                                        <form
                                            action="/loggedIn/admin/reservations/<%= reservation._id %>/numberOfVisitors?_method=PUT"
                                            method="post" class="mt-2">
                                            <div class="input-group">
                                                <input type="number" name="numberOfVisitors"
                                                    value="<%= reservation.numberOfVisitors %>" required
                                                    class="form-control" autocomplete="off" min="1">
                                                <button type="submit" class="btn btn-success">Update Number of
                                                    Visitors</button>
                                            </div>
                                        </form>

                                        <!-- Add a button to remove the reservation -->
                                        <form action="/loggedIn/admin/remove-reservation/<%= reservation._id %>"
                                            method="post">
                                            <button type="submit" class="btn btn-danger btn-sm mt-2">Remove
                                                Reservation</button>
                                        </form>

                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                </div>
            </div>
        </section>
    </main>

