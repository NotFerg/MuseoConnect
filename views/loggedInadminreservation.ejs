    <main id="main">
        <!-- Reservation List -->
        <section class="intro-single" id="reservation-section">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-lg-8">
                        <div class="title-single-box d-flex align-items-center">
                            <img src="images/reserved.png" alt="Image" class="img-fluid"
                                style="max-width: 100px; max-height: 100px;">
                            <h1 class="title-single">Reservation List</h1>
                            
                        </div>
                        <button id="toggleViewButtonCard" class="btn btn-primary mt-2">Toggle View</button>
                    </div>
                    <br><br><br><br><br><br><br><br>
                    <form id="reservation-search-form" class="mb-3">
                        <div class="input-group">
                            <input type="text" id="reservation-search-input" class="form-control"
                                placeholder="Search by name or email" autocomplete="off">
                            <input type="text" id="reservation-date-input" class="form-control"
                                placeholder="Search by date (YYYY-MM-DD)" autocomplete="off">
                            <button type="button" id="reservation-search-button" class="btn btn-primary">Search</button>
                            <button type="button" id="reservation-reset-button" class="btn btn-secondary">Reset</button>
                        </div>
                    </form>


                    <div class="row">
                        <% reservations.forEach(reservation=> { %>
                            <div class="col-12 col-md-6 col-lg-4 reservation-card">
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%= reservation.fullName %>
                                        </h5>
                                        <p class="card-text"><strong>Email:</strong>
                                            <%= reservation.emailAddress %>
                                        </p>
                                        <!-- Display reservations for the user -->
                                        <h6>Reservations:</h6>

                                        <!-- Update Visit Date -->
                                        <form
                                            action="/loggedIn/admin/reservations/<%= reservation._id %>/visitDate?_method=PUT"
                                            method="post" class="mt-2">
                                            <div class="input-group">
                                                <input type="text" name="visitDate" class="visitDate form-control"
                                                    value="<%= reservation.visitDate.toISOString().split('T')[0] %>"
                                                    required autocomplete="off">
                                                <button type="submit" class="btn btn-success">Update Visit Date</button>
                                            </div>
                                        </form>

                                        <!-- Update Visit Time -->
                                        <form
                                            action="/loggedIn/admin/reservations/<%= reservation._id %>/visitTime?_method=PUT"
                                            method="post" class="mt-2 update-visit-time-form">
                                            <input type="hidden" name="visitTime" value="<%= reservation.visitTime %>">
                                            <p>Current Reservation Time: <%= reservation.visitTime %>
                                            </p>
                                            <button type="button" class="btn btn-success update-visit-time"
                                                data-new-time="<%= reservation.visitTime === '10:30' ? '13:30' : '10:30' %>">
                                                Update Visit Time to <%= reservation.visitTime==='10:30' ? '13:30'
                                                    : '10:30' %>
                                            </button>
                                        </form>

                                        <!-- Update Contact Number -->
                                        <form
                                            action="/loggedIn/admin/reservations/<%= reservation._id %>/contactNumber?_method=PUT"
                                            method="post" class="mt-2">
                                            <div class="input-group">
                                                <input type="number" name="contactNumber"
                                                    value="<%= reservation.contactNumber %>" required
                                                    class="form-control" autocomplete="off">
                                                <button type="submit" class="btn btn-success">Update Contact
                                                    Number</button>
                                            </div>
                                        </form>

                                        <!-- Update Number of Visitors -->
                                        <form
                                            action="/loggedIn/admin/reservations/<%= reservation._id %>/numberOfVisitors?_method=PUT"
                                            method="post" class="mt-2">
                                            <div class="input-group">
                                                <input type="number" name="numberOfVisitors"
                                                    value="<%= reservation.numberOfVisitors %>" required
                                                    class="form-control" autocomplete="off" min="1">
                                                <button type="submit" class="btn btn-success">Update Number of
                                                    Visitors</button>
                                            </div>
                                        </form>

                                        <!-- Add a button to remove the reservation -->
                                        <form action="/loggedIn/admin/remove-reservation/<%= reservation._id %>"
                                            method="post">
                                            <button type="submit" class="btn btn-danger btn-sm mt-2">Remove
                                                Reservation</button>
                                        </form>

                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                </div>
            </div>
        </section>

        <!-- Reservation List Table row -->
        <section class="intro-single" id="reservation-table-section" style="display: none;">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-lg-8">
                        <div class="title-single-box d-flex align-items-center">
                            <img src="images/reserved.png" alt="Image" class="img-fluid"
                                style="max-width: 100px; max-height: 100px;">
                            <h1 class="title-single">Reservation List</h1>
                            
                        </div>
                        <button id="toggleViewButtonTable" class="btn btn-primary mt-2">Toggle View</button>
                    </div>
                    <br><br><br><br><br><br><br><br>
                    <form id="reservation-search-form" class="mb-3">
                        <div class="input-group">
                            <input type="text" id="reservation-table-search-input" class="form-control"
                                placeholder="Search by name,email or date (YYYY-MM-DD)" autocomplete="off">
                            <button type="button" id="reservation-table-search-button"
                                class="btn btn-primary">Search</button>
                            <button type="button" id="reservation-table-reset-button"
                                class="btn btn-secondary">Reset</button>
                        </div>
                    </form>

                    <!-- Table for Reservations -->
                    <div class="table-responsive">
                        <div class="row">
                            <div class="col-12 col-md-6">
                                <label for="sort-order-select" class="form-label">Sort Order:</label>
                                <select id="sort-order-select" class="form-select ">
                                    <option value="asc">Ascending</option>
                                    <option value="desc">Descending</option>
                                </select>
                                <button type="button" id="sort-date-button" class="btn btn-primary my-2">Sort by
                                    Date</button>
                                <button type="button" id="sort-time-button" class="btn btn-primary my-2">Sort by
                                    Time</button>
                                <button type="button" id="sort-visitors-button" class="btn btn-primary my-2">Sort by
                                    Number of Visitors</button>
                                <button type="button" id="reservation-reset-sort-button"
                                    class="btn btn-secondary my-2">Reset</button>
                            </div>
                        </div>

                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Visit Date</th>
                                    <th>Visit Time</th>
                                    <th>Contact Number</th>
                                    <th>Number of Visitors</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% reservations.forEach(reservation=> { %>
                                    <tr>
                                        <td>
                                            <%= reservation.fullName %>
                                        </td>
                                        <td>
                                            <%= reservation.emailAddress %>
                                        </td>
                                        <td>
                                            <!-- Update Visit Date -->
                                            <form
                                                action="/loggedIn/admin/reservations/<%= reservation._id %>/visitDate?_method=PUT"
                                                method="post" class="d-flex justify-content-between">
                                                <input type="text" name="visitDate" class="visitDate form-control"
                                                    value="<%= reservation.visitDate.toISOString().split('T')[0] %>"
                                                    required autocomplete="off">
                                                
                                                <button type="submit" class="btn btn-success ">Update Visit Date</button>
                                            </form>
                                        </td>
                                        <td>
                                            <!-- Update Visit Time -->
                                            <form
                                                action="/loggedIn/admin/reservations/<%= reservation._id %>/visitTime?_method=PUT"
                                                method="post" class="update-visit-time-form">
                                                <input type="hidden" name="visitTime"
                                                    value="<%= reservation.visitTime %>">
                                                <p>Current Reservation Time: <%= reservation.visitTime %>
                                                </p>
                                                <button type="button" class="btn btn-success update-visit-time"
                                                    data-new-time="<%= reservation.visitTime === '10:30' ? '13:30' : '10:30' %>">
                                                    Update Visit Time to <%= reservation.visitTime==='10:30' ? '13:30'
                                                        : '10:30' %>
                                                </button>
                                            </form>
                                        </td>
                                        <td>
                                            <!-- Update Contact Number -->
                                            <form
                                                action="/loggedIn/admin/reservations/<%= reservation._id %>/contactNumber?_method=PUT"
                                                method="post">
                                                <input type="number" name="contactNumber"
                                                    value="<%= reservation.contactNumber %>" required
                                                    class="form-control " autocomplete="off">
                                                <button type="submit" class="btn btn-success">Update Contact
                                                    Number</button>
                                            </form>
                                        </td>
                                        <td>
                                            <!-- Update Number of Visitors -->
                                            <form
                                                action="/loggedIn/admin/reservations/<%= reservation._id %>/numberOfVisitors?_method=PUT"
                                                method="post">
                                                <input type="number" name="numberOfVisitors"
                                                    value="<%= reservation.numberOfVisitors %>" required
                                                    class="form-control " autocomplete="off" min="1">
                                                <button type="submit" class="btn btn-success">Update Number of
                                                    Visitors</button>
                                            </form>
                                        </td>
                                        <td>
                                            <!-- Remove Reservation -->
                                            <form action="/loggedIn/admin/remove-reservation/<%= reservation._id %>"
                                                method="post">
                                                <button type="submit" class="btn btn-danger btn-sm ">Remove
                                                    Reservation</button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>

    </main>

