              <div class="card">
                <div class="card-body p-5">
                  <div class="row">
                    <div class="col-md-6">
                      <!-- Left side -->
                      <form action="/signUp" method="post" onsubmit="return validateForm()">
                        <div style="display: flex; justify-content: center; align-items: center;">
                          <img src="https://www.dlsud.edu.ph/images/about-logo.png" alt="dlsud-logo" class="logo">
                          <img src="https://culture360.asef.org/media/2011/7/Museo_De_La_Salle.jpeg" alt="dlsud-logo"
                            class="logo">
                        </div><br>

                        <div class="form-outline mb-4">
                          <input type="text" id="name" class="form-control form-control-lg" name="name"
                            autocomplete="off" required />
                          <label class="form-label" for="name">Name</label>
                        </div>

                        <div class="form-outline mb-4">
                          <input type="email" id="email" class="form-control form-control-lg" name="email"
                            autocomplete="off" required />
                          <label class="form-label" for="email">Email Address</label>
                        </div>

                        <div class="form-outline mb-4">
                          <input type="password" id="password" class="form-control form-control-lg" name="password"
                            autocomplete="off" required />
                          <label class="form-label" for="password">Password</label>
                        </div>

                        <div class="form-outline mb-4">
                          <input type="password" id="confirmPassword" class="form-control form-control-lg"
                            name="confirmPassword" autocomplete="off" required />
                          <label class="form-label" for="confirmPassword">Confirm Password</label>
                        </div>

                        <h5>Gender</h5>
                        <div class="form-check form-check-inline">
                          <input class="form-check-input" type="radio" name="gender" id="maleRadio" value="Male"
                            required>
                          <label class="form-check-label" for="maleRadio">
                            Male
                          </label>
                        </div>
                        <div class="form-check form-check-inline">
                          <input class="form-check-input" type="radio" name="gender" id="femaleRadio" value="Female"
                            required>
                          <label class="form-check-label" for="femaleRadio">
                            Female
                          </label>
                        </div>
                        <br><br>

                        <h5>Type</h5>
                        <!-- Teacher Radio Button with additional options -->
                        <div class="user-type-option">
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="userType" id="teacherRadio"
                              value="Teacher" required>
                            <label class="form-check-label" for="teacherRadio">Teacher</label>
                          </div>
                          <div id="teacherTypeOptions" style="display: none;">
                            <div class="form-check form-check-inline">
                              <input class="form-check-input" type="radio" name="teacherType" id="dlsudTeacherRadio"
                                value="DLSUD-Teacher">
                              <label class="form-check-label" for="dlsudTeacherRadio">DLSU-D Teacher</label>
                            </div>
                            <div class="form-check form-check-inline">
                              <input class="form-check-input" type="radio" name="teacherType" id="outsiderTeacherRadio"
                                value="Outsider-Teacher">
                              <label class="form-check-label" for="outsiderTeacherRadio">Outsider Teacher</label>
                            </div>
                          </div>
                        </div>

                        <!-- Student Radio Button with additional options -->
                        <div class="user-type-option">
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="userType" id="studentRadio"
                              value="Student" required>
                            <label class="form-check-label" for="studentRadio">Student</label>
                          </div>
                          <div id="studentTypeOptions" style="display: none;">
                            <div class="form-check form-check-inline">
                              <input class="form-check-input" type="radio" name="studentType" id="dlsudStudentRadio"
                                value="DLSUD-Student">
                              <label class="form-check-label" for="dlsudStudentRadio">DLSU-D Student</label>
                            </div>
                            <div class="form-check form-check-inline">
                              <input class="form-check-input" type="radio" name="studentType" id="outsiderStudentRadio"
                                value="Outsider-Student">
                              <label class="form-check-label" for="outsiderStudentRadio">Outsider Student</label>
                            </div>
                          </div>
                        </div>

                        <div class="user-type-option">
                          <input class="form-check-input" type="radio" name="userType" id="dlsuStaff"
                              value="DLSU-D Staff" required>
                            <label class="form-check-label" for="dlsuStaff">DLSU-D Staff</label>
                        </div>

                        <!-- Others Radio Button -->
                        <div class="user-type-option">
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="userType" id="othersRadio" value="Others"
                              required>
                            <label class="form-check-label" for="othersRadio">Others</label>
                          </div>
                          <div id="othersInput" style="display: none;">
                            <input type="text" id="others" class="form-control form-control-lg" name="others"
                            autocomplete="off" />
                          <label class="form-label" for="others">Other (please specify)</label>
