  <script>
    const othersRadio = document.querySelector('#othersRadio');
    const othersInput = document.querySelector('#othersInput');
    const othersText = document.querySelector('#others');
    const teacherRadio = document.querySelector('#teacherRadio');
    const studentRadio = document.querySelector('#studentRadio');

    othersRadio.addEventListener('change', function () {
      if (this.checked) {
        othersInput.style.display = 'block';
      } else {
        othersInput.style.display = 'none';
      }
    });

    teacherRadio.addEventListener('change', function () {
      if (this.checked) {
        othersInput.style.display = 'none';
        document.getElementById('teacherTypeOptions').style.display = 'block';
        document.getElementById('studentTypeOptions').style.display = 'none'; // Hide student options when teacher is selected
      }
    });

    studentRadio.addEventListener('change', function () {
      if (this.checked) {
        othersInput.style.display = 'none';
        document.getElementById('studentTypeOptions').style.display = 'block';
        document.getElementById('teacherTypeOptions').style.display = 'none'; // Hide teacher options when student is selected
      }
    });

    othersRadio.addEventListener('change', function () {
      if (this.checked) {
        othersInput.style.display = 'block';
        document.getElementById('studentTypeOptions').style.display = 'none'; // Hide student options
        document.getElementById('teacherTypeOptions').style.display = 'none'; // Hide teacher options
      }
    });

    const dlsuStaffRadio = document.querySelector('#dlsuStaff');

  dlsuStaffRadio.addEventListener('change', function () {
    if (this.checked) {
      document.getElementById('studentTypeOptions').style.display = 'none'; // Hide student options
      document.getElementById('teacherTypeOptions').style.display = 'none'; // Hide teacher options
      othersInput.style.display = 'none'; // Hide others input
    }
  });

    function validateForm() {
      const passwordInput = document.getElementById('password');
      const confirmPasswordInput = document.getElementById('confirmPassword');
      const othersInput = document.getElementById('others');
      const othersValue = othersInput.value.toLowerCase(); // Convert the input value to lowercase for case-insensitive check

      if (othersValue.includes('admin')) {
        alert('The word "admin" is not allowed in the Others field.');
        return false; // Prevent form submission
      }

      if (passwordInput.value !== confirmPasswordInput.value) {
        alert('Passwords do not match. Please enter matching passwords.');
        return false;
      }

      // Continue with the form submission if "admin" is not found and passwords match
      return true;
    }

  </script>

