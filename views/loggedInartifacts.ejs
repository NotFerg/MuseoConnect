    <!-- Card Section -->
    <div class="container my-4">
      <div class="row">
        <div class="col">
          <input type="text" id="searchInput" class="form-control" placeholder="Search for artifacts by name...">
        </div>
        <div class="col-auto">
          <button id="searchButton" class="btn btn-primary">Search</button>
        </div>
        <div class="col-auto">
          <button id="resetButton" class="btn btn-secondary">Reset</button>
        </div>
      </div>
    </div>
    
    
    <div class="container-fluid py-3">
      <div class="row gx-5 my-5">
        <% artifacts.forEach(function(artifact) { %>
          <div class="col-12 col-md-6">
            <div class="card my-2">
              <img src="<%= artifact.image %>" class="card-img-top" alt="<%= artifact.title %>" loading="lazy">
              <div class="card-body text-center">
                <h1 class="card-title text-center">
                  <%= artifact.title %>
                </h1>
                <h5>
                  <%= artifact.type %>
                </h5>
                <p class="card-text expandable-description">
                  <%= artifact.description %>
                </p>
                <!-- Button trigger modal -->
                <% if (artifact.sketchfabLink) { %>
                  <button type="button" class="btn btn-success" data-bs-toggle="modal"
                    data-bs-target="#<%= 'modal' + artifact._id %>">
                    VIEW 3D MODEL
                  </button>
                  <!-- Modal -->
                  <div class="modal fade" id="<%= 'modal' + artifact._id %>" tabindex="-1"
                    aria-labelledby="<%= 'modalLabel' + artifact._id %>" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h1 class="modal-title fs-5" id="<%= 'modalLabel' + artifact._id %>">
                            <%= artifact.title %> 3D View
                          </h1>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                          <!-- Check if it's an embed link -->
                          <% if (artifact.sketchfabLink) { %>
                            <%- artifact.sketchfabLink %>
                              <% } %>
                        </div>
                      </div>
                    </div>
                  </div>
                  <% } %>
              </div>
            </div>
          </div>
          <% }); %>


      </div> <!-- Row End-->

    </div> <!-- container fluid div-->

  </main><!-- End #main -->

