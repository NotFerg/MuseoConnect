    <script>
        $(document).ready(function () {
            // Function to sort the table based on the selected option
            function sortTable(order) {
                var rows = $('#blockedDateTable tbody tr').get();
    
                rows.sort(function (a, b) {
                    var dateA = new Date($(a).children('td:first').text());
                    var dateB = new Date($(b).children('td:first').text());
    
                    if (order === 'asc') {
                        return dateA - dateB;
                    } else {
                        return dateB - dateA;
                    }
                });
    
                $.each(rows, function (index, row) {
                    $('#blockedDateTable tbody').append(row);
                });
            }
    
            // Event listener for the sort button
            $('#sort-date-button').click(function () {
                var sortOrder = $('#sort-order-select').val();
                sortTable(sortOrder);
            });
    
            // Event listener for the reset button
            $('#reset-sort-button').click(function () {
                // Reload the page to reset the table to its original order
                location.reload();
            });

            function toggleView() {
        var cardView = $('#card-view');
        var tableView = $('#table-view');

        // Toggle visibility of card and table views
        cardView.toggle();
        tableView.toggle();
    }

    // Event listener for the toggle view button
    $('#toggle-view-button').click(function () {
        toggleView();
    });

    // Initially hide one of the views (assuming card view is initially shown)
    $('#table-view').hide();

        });
    </script>
