    <main id="main">
        <!-- Blocked Reservation -->
        <section class="intro-single">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-lg-8">
                        <div class="title-single-box d-flex align-items-center">
                            <img src="/images/blocked.png" alt="Image" class="img-fluid"
                                style="max-width: 100px; max-height: 100px;">
                            <h1 class="title-single">Blocked Date List</h1>
                        </div>
                    </div>
                    <br><br><br><br><br><br><br><br>

                    <form id="setDate" action="/loggedIn/admin/addBlockedDates" method="post" class="mb-3">
                        <div class="input-group">
                            <input type="input" id="blockedDate" class="form-control datePicker me-2" name="blockedDate"
                                autocomplete="off" placeholder = "yyyy-mm-dd"required>
                            <div class="mt-2">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="10:30" id="checkbox1030"
                                        name="blockedTimes">
                                    <label class="form-check-label" for="checkbox1030">
                                        10:30 AM
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="13:30" id="checkbox1330"
                                        name="blockedTimes">
                                    <label class="form-check-label" for="checkbox1330">
                                        1:30 PM
                                    </label>
                                </div>
                            </div>
                            <button type="button" id="btnsubmitDate" class="btn btn-primary mt-2">Block Date</button>
                        </div>
                    </form>

                    <div class="row">
                        <div class="col-12">
                            <button type="button" id="toggle-view-button" class="btn btn-primary mb-2">Toggle View</button>
                        </div>
                    </div>

                    <!-- Showing Cards-->
                    <div class="row" id="card-view">
                        <% blocked.forEach(blocked=> { %>
                            <div class="col-12 col-md-6 col-lg-4 reservation-card">
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <h6>Blocked Dates</h6>

                                        <!-- Update Blocked Date -->
                                        <form
                                            action="/loggedIn/admin/blocked/<%= blocked._id %>/blockedDate?_method=PUT"
                                            method="post" class="mt-2">
                                            <div class="input-group">
                                                <input type="text" name="updblockedDate"
                                                    value="<%= blocked.blockedDate ? blocked.blockedDate.toISOString().split('T')[0] : '' %>"
                                                    required class="form-control datePicker" autocomplete="off">
                                                <button type="submit" class="btn btn-success">Update blocked
                                                    Date</button>
                                            </div>
                                        </form>

                                        <!-- Update Blocked Times -->
                                        <form action="/loggedIn/admin/removeBlockedTime/<%= blocked._id %>"
                                            method="POST" class="mt-2">
                                            <div class="">
                                                <% if (blocked.blockedTimes && blocked.blockedTimes.length> 0) { %>
                                                    <h6>Blocked Times:</h6>
                                                    <% blocked.blockedTimes.forEach(function (time) { %>
                                                        <div class="d-flex align-items-center my-2">
                                                            <%= time %>
                                                                <% if ((time==='10:30' || time==='13:30' ) &&
                                                                    blocked.blockedTimes.includes('10:30') &&
                                                                    blocked.blockedTimes.includes('13:30')) { %>
                                                                    <form
                                                                        action="/loggedIn/admin/removeBlockedTime/<%= blocked._id %>"
                                                                        method="POST">
                                                                        <input type="hidden" name="time"
                                                                            value="<%= time %>">
                                                                        <button type="submit"
                                                                            class="btn btn-danger btn-sm ms-2">Remove</button>
                                                                    </form>
                                                                    <% } %>
                                                        </div>
                                                        <% }); %>
                                                            <% } %>
                                            </div>
                                        </form>


                                        <!-- Add a button to remove the reservation -->
                                        <form action="/loggedIn/admin/removeBlockedDate/<%= blocked._id %>"
                                            method="POST">
                                            <button type="submit" class="btn btn-danger btn-sm mt-2">Remove
                                                Block</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                </div>

            </div>
        </section>

        <section class="" id="blocked-table-section">
            <div class="container">
                <div class="table-responsive">
                    <div class="row" id="table-view">
                        <div class="col-12 col-md-6">
                            <label for="sort-order-select" class="form-label">Sort Order:</label>
                            <select id="sort-order-select" class="form-select ">
                                <option value="asc">Ascending</option>
                                <option value="desc">Descending</option>
                            </select>
                            <button type="button" id="sort-date-button" class="btn btn-primary my-2">Sort by
                                Date</button>
                            <button type="button" id="reset-sort-button"
                                class="btn btn-secondary my-2">Reset</button>
                        </div>
                        <div class="col-md-12">
                            <h2>Blocked Date Table</h2>
                            <table class="table table-bordered" id="blockedDateTable">
                                <thead>
                                    <tr>
                                        <th scope="col">Blocked Date</th>
                                        <th scope="col">Blocked Times</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% blocked.forEach(blocked=> { %>
                                        <tr>
                                            <td>
                                                <%= blocked.blockedDate ?
                                                    blocked.blockedDate.toISOString().split('T')[0] : '' %>
                                            </td>
                                            <td>
                                                <% if (blocked.blockedTimes && blocked.blockedTimes.length> 0) { %>
                                                    <% blocked.blockedTimes.forEach(function (time) { %>
                                                        <%= time %><br>
                                                            <% }); %>
                                                                <% } else { %>
                                                                    No blocked times
                                                                    <% } %>
                                            </td>
                                            <td>
                                                <!-- Update Blocked Date -->
                                                <form
                                                    action="/loggedIn/admin/blocked/<%= blocked._id %>/blockedDate?_method=PUT"
                                                    method="post">
                                                    <input type="text" name="updblockedDate"
                                                        value="<%= blocked.blockedDate ? blocked.blockedDate.toISOString().split('T')[0] : '' %>"
                                                        required class="form-control datePicker" autocomplete="off">
                                                    <button type="submit" class="btn btn-success">Update Blocked
                                                        Date</button>
                                                </form>

                                                <!-- Update Blocked Times -->
                                                <form action="/loggedIn/admin/removeBlockedTime/<%= blocked._id %>"
                                                    method="POST" class="mt-2">
                                                    <div class="">
                                                        <% if (blocked.blockedTimes && blocked.blockedTimes.length> 0) {
                                                            %>
                                                            <h6>Blocked Times:</h6>
                                                            <% blocked.blockedTimes.forEach(function (time) { %>
                                                                <div class="d-flex align-items-center my-2">
                                                                    <%= time %>
                                                                        <% if ((time==='10:30' || time==='13:30' ) &&
                                                                            blocked.blockedTimes.includes('10:30') &&
                                                                            blocked.blockedTimes.includes('13:30')) { %>
                                                                            <form
                                                                                action="/loggedIn/admin/removeBlockedTime/<%= blocked._id %>"
                                                                                method="POST">
                                                                                <input type="hidden" name="time"
                                                                                    value="<%= time %>">
                                                                                <button type="submit"
                                                                                    class="btn btn-danger btn-sm ms-2">Remove</button>
                                                                            </form>
                                                                            <% } %>
                                                                </div>
                                                                <% }); %>
                                                                    <% } else { %>
                                                                        No blocked times
                                                                        <% } %>
                                                    </div>
                                                </form>

                                                <!-- Remove Blocked Date -->
                                                <form action="/loggedIn/admin/removeBlockedDate/<%= blocked._id %>"
                                                    method="POST">
                                                    <button type="submit" class="btn btn-danger btn-sm mt-2">Remove
                                                        Block</button>
                                                </form>
                                            </td>
                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>

